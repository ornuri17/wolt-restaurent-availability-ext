{
	"name": "Woltor",
	"description": "Woltor identifies temporarily offline restaurants on Wolt.com and allows you to track the restaurant availability",
	"version": "1.1.0",
	"manifest_version": 3,
	"background": {
		"service_worker": "background.js"
	},
	"permissions": ["storage", "tabs", "activeTab", "webNavigation"],
	"action": {
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["https://*/*", "http://*/*"],
			"js": ["content_script.js"]
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["bell.png", "googleAnalytics.js", "grey-bell.png"],
			"matches": ["https://*/*", "http://*/*"]
		}
	],
	"icons": { "16": "icon.png" }
}
